{
  "yaml.format.enable": true,
  "yaml.format.printWidth": 120,
  "markdownlint.config": {
    "line_length": false
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "json",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "yaml"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": [
        "terraform"
      ],
      "initializationOptions": {}
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": [
        "server",
        "-m",
        "stream"
      ],
      "filetypes": [
        "typescript",
        "typescriptreact",
        "graphql"
      ]
    }
  },
  "eslint.autoFixOnSave": true
}
